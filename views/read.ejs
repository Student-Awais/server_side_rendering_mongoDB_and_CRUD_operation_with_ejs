<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link rel="stylesheet" href="/stylesheet/style.css" />
    <title>Document</title>
  </head>
  <body>
    <div class="w-full h-full bg-zinc-900 p-12 text-white">
      <a class="text-blue-400" href="/">Back To Home</a>
      <h1 class="text-4xl tracking-tight mb-5 mt-10">All Users</h1>
      <div class="users flex gap-2 flex-wrap">
        <% if (users && users.length > 0) { %> <% users.forEach(user => { %>
        <div class="user w-60 p-3 bg-zinc-600 rounded-md">
          <div class="w-full h-40 rounded-sm overflow-hidden">
            <img
              class="w-full h-full object-cover"
              src="<%= user.image %>"
              alt="User Image"
            />
          </div>
          <h3 class="text-base mt-1 text-zinc-200 tracking-tighter">
            <%= user.name %>
          </h3>
          <h5 class="text-zinc-400 text-sm"><%= user.email %></h5>
          <div class="flex gap-3 mt-8 text-sm">
            <a class="text-green-300" href="/edit/<%= user._id %>">Edit User</a>
            <a class="text-red-300" href="/delete/<%= user._id %>"
              >Delete User</a
            >
          </div>
        </div>
        <% }) %> <% } else { %>
        <h1 class="text-zinc-600 font-semibold text-2xl">No User Found</h1>
        <% } %>
      </div>
    </div>
  </body>
</html>
